<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #6495ED;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controler.ConnexionController">

            <!-- Bienvenue sur le Morpion Solitaire -->
            <Text layoutX="70.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenue sur le Morpion Solitaire">
                <font>
                    <Font size="16.0" />
                </font>
            </Text>

            <!-- Image -->
            <ImageView fitHeight="100" fitWidth="100" layoutX="150.0" layoutY="80.0">
                <image>
                    <Image url="logo_test.png" />
                </image>
            </ImageView>

            <!-- Champs d'entrée pour le nom d'utilisateur et le mot de passe -->
            <TextField fx:id="usernameField" layoutX="100.0" layoutY="200.0" promptText="Username" />
            <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="240.0" promptText="Password" />

            <!-- Bouton de connexion -->
            <Button layoutX="100.0" layoutY="280.0" mnemonicParsing="false" onAction="#loginButtonAction" text="Login" />

            <!-- Bouton pour la première connexion -->
            <Button layoutX="185.0" layoutY="280.0" mnemonicParsing="false" onAction="#firstLoginButtonAction" text="First Login" />
</AnchorPane>
